  <div class="my-8">
    <h2>SKiLLS & TOOLS</h2>
    <p>My set of skills and tools I feel comfortable with.</p>
  </div>

  <!-- Skills -->
  <div
    class="my-8 mx-auto bg-yellow-200 p-4 rounded-lg border lg:w-3/4 dark:bg-night dark:border-purple-700"
  >
    <ul>
      {
        skills.map((skill) => {
          return (
            <li class="py-4">
              <strong>
                {skill.category}:<br />
              </strong>
              <span>{skill.skills.join(" â€¢ ")}</span>
            </li>
          );
        })
      }
    </ul>
  </div>
</section>
