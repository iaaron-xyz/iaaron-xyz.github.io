---
const {
  projectTitle,
  projectDescription,
  projectThumbnail,
  projectRepository,
  projectSite,
  projectTags,
} = Astro.props;
---

<div class="mb-10">
  <a href={projectSite} target="_blank">
    <div class="overflow-hidden">
      <img
        src={projectThumbnail}
        alt=""
        class="h-60 md:h-96 w-full object-cover rounded-md transform transition-transform duration-300 hover:scale-110"
      />
    </div>
  </a>
  <div class="flex flex-col">
    <h3>{projectTitle}</h3>
    <div class="mt-2 mb-4">
      <a href={projectRepository} class="px-2 py-1 btn-line">GIHUB</a>
      <a href={projectSite} target="_blank" class="px-2 py-1 btn-line"
        >WEBSITE</a
      >
    </div>
  </div>
  <p>{projectDescription}</p>
  <div class="mt-2 text-sm">
    {
      projectTags.map((tag) => (
        <span
          class={`mr-2 px-2 py-1 rounded-md ${tag.bgColor} ${tag.textColor}`}
        >
          {tag.name}
        </span>
      ))
    }
  </div>
</div>
