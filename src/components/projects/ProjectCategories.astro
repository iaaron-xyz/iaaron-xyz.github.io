---
import ProjectCategory from "./ProjectCategory.astro";
import { projectCategories } from "@portfolio";
---

<section class="grid grid-cols-1 lg:grid-cols-2 gap-16">
  {
    // Filter projects with the correct category
    projectCategories
      .map((category) => (
        <ProjectCategory
          categoryTitle={category.title}
          categoryDescription={category.description}
          categoryThumbnail={category.thumbnail}
          categoryPath={category.path}
        />
      ))
  }
</section>