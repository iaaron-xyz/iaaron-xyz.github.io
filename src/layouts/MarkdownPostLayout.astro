---
// Import the base layout component and global styles
import BaseLayout from "./BaseLayout.astro";
import "../styles/global.css";
// Extract frontmatter data from markdown files via Astro.props
const { frontmatter } = Astro.props;
---

<BaseLayout blogTitle={frontmatter.title}>
  {/* Main content container with responsive width */}
  <div class="w-full">
    {/* Post description displayed as a subtitle */}
    <h2
      class="text-slate-500 dark:text-slate-400 text-2xl md:mb-12 md:text-3xl"
    >
      {frontmatter.description}
    </h2>

    {/* Post metadata section with publication dates */}
    <section class="flex flex-col items-center">
      {
        /* Conditional rendering of featured image if URL is provided */
        frontmatter.image.url && (
          <div class="mr-auto">
            <img
              src={frontmatter.image.url}
              alt={frontmatter.image.alt}
              class="w-full h-auto rounded-lg shadow-lg"
              loading="lazy"
              width={frontmatter.image.width}
              height={frontmatter.image.height}
            />
          </div>
        )
      }
      <div class="my-4 self-start">
        {/* Original publication date */}
        <p class="text-xs font-mono">
          Publication date: {frontmatter.pubDate.toString().slice(0, 10)}
        </p>
        {
          /* Conditional rendering of update date if available */
          frontmatter.upDate && (
            <p class="text-xs font-mono">
              Updated: {frontmatter.upDate.toString().slice(0, 10)}
            </p>
          )
        }
      </div>
    </section>

    {/* Main content area where markdown content is rendered */}
    <section class="mt-8 font-inter-regular text-lg markdown-content">
      <slot />
    </section>
  </div>
</BaseLayout>
